[mysqld]
# Configuration MySQL optimisée pour 512MB RAM

# Mémoire
innodb_buffer_pool_size=64M
innodb_log_buffer_size=4M
key_buffer_size=16M
query_cache_size=8M
tmp_table_size=8M
max_heap_table_size=8M

# Connections
max_connections=10
max_user_connections=5
thread_cache_size=2

# InnoDB optimisations
innodb_flush_method=O_DIRECT
innodb_flush_log_at_trx_commit=2
innodb_thread_concurrency=2

# Cache
table_open_cache=64
table_definition_cache=64

# Binlog (désactivé pour économiser RAM)
disable_log_bin=1

# Performance
slow_query_log=0
general_log=0

# Sécurité
skip-name-resolve
sql_mode=STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO

[mysql]
default-character-set=utf8mb4

[client]
default-character-set=utf8mb4
