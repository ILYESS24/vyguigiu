eval_gemfile('common_spree_dependencies.rb')

# Configuration API-Admin only (sans storefront)
gem 'spree_core', path: './core'
gem 'spree_api', path: './api'
gem 'spree_admin', path: './admin'
gem 'spree_emails', path: './emails'
gem 'spree_cli', path: './cli'

# Dépendances essentielles
gem 'rails', ENV.fetch('RAILS_VERSION', '~> 8.1.0')
gem 'pg' # PostgreSQL recommandé pour production
gem 'redis' # Pour cache et background jobs

# Outils de développement (optionnel)
group :development do
  gem 'pry-byebug'
end
